# API Football Configuration
API_FOOTBALL_KEY=fd4b447a00e463ef9af6f423e44032a1

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Server Ports
PORT=8080
GRPC_PORT=50051

# Environment
ENVIRONMENT=development
LOG_LEVEL=info

# Database (PostgreSQL)
# Provide a connection URL suitable for local development.
# sslmode=disable avoids TLS for local Docker/Desktop setups.
DATABASE_URL=postgres://postgres:postgres@127.0.0.1:5432/afcon?sslmode=disable

# Docker/Local Postgres defaults
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=afcon

# League Initialization
# Format: leagueID:season:name (comma-separated for multiple leagues)
# Common IDs: 6=AFCON, 39=Premier League, 2=Champions League, 140=La Liga
INIT_LEAGUES=6:2025:AFCON 2025
# INIT_LEAGUES=39:2025:Premier League
# INIT_LEAGUES=6:2025:AFCON 2025,39:2025:Premier League,2:2025:Champions League

# Auto-initialization (set to false to disable automatic fixture loading)
# AUTO_INIT=true

# ============================================================================
# Push Notification Configuration
# ============================================================================

# Apple Push Notification Service (APNS) - for iOS
# Get these from your Apple Developer account
APNS_KEY_ID=YOUR_APNS_KEY_ID
APNS_TEAM_ID=YOUR_TEAM_ID
APNS_KEY_PATH=/path/to/your/AuthKey_XXXXXXXXXX.p8
APNS_TOPIC=com.yourcompany.yourapp
APNS_ENVIRONMENT=sandbox  # or 'production'

# Firebase Cloud Messaging (FCM) - for Android
# Get this from your Firebase project settings
FCM_SERVER_KEY=YOUR_FCM_SERVER_KEY
